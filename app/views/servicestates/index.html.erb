<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Service states</div>

<div class="row">
 <div class="col-md-1">
 </div>
 <div class="col-xs-4">
  <table class="table">
      <th>Name</th>
      <th>Created</th>
      <th colspan="2"></th>
    <% @servicestates.each do |servicestate| %>
      <tr>
        <td><%= servicestate.name %></td>
        <td><%= time_ago_in_words servicestate.created_at %></td>
        <td>
		<%= link_to edit_servicestate_path(servicestate), class: "link-to-text-color" do %>
		<span class="glyphicon glyphicon-pencil"></span>
                <% end %>
	</td>
        <td>
		<%= link_to servicestate, method: :delete, data: { confirm: 'Are you sure?' }, class: "link-to-text-color" do %>
		<span class="glyphicon glyphicon-trash"></span>
                <% end %>
	</td>
      </tr>
    <% end %>
  </table>
 </div>
</div>

<div class="row">
 <div class="col-md-1">
 </div>
 <div class="col-md-2">
        <a href="/servicestates/new"><button type="button" class="btn">Add a Service state</button></a>
 </div>
</div>

