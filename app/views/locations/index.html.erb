
<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Locations</div>

<div class="row">
 <div class="col-md-1">
 </div>
 <div class="col-xs-4">
  <table class="table">
   	<th>Name</th>
	<th>Created</th>
	<th colspan="2"></th>
    <% @locations.each do |loc| %>
	<tr>
	  <td><%= loc.city %></td>
	  <td><%= time_ago_in_words loc.created_at %> ago</td>
	  <td>
		<%= link_to edit_location_path(loc.id), class: "link-to-text-color" do %>
		<span class="glyphicon glyphicon-pencil"></span>
                <% end %>
	  </td>
	  <td>
		<%= link_to loc, method: :delete, data: { confirm: "Are you sure?" }, class: "link-to-text-color" do %>
		<span class="glyphicon glyphicon-trash"></span>
                <% end %>
	  </td>
	</tr>
    <% end %>
  </table>
 </div>
</div>

</div>

<div class="row">
 <div class="col-md-1">
 </div>
 <div class="col-md-2">
	<a href="/locations/new"><button type="button" class="btn">Add a new location</button></a>
 </div>
</div>
